<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDialogLayout?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<JFXDialogLayout maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                 xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
                 fx:controller="net.gunivers.commandlistgenerator.gui.functionality.ListController">
    <children>
        <VBox>
            <children>
                <JFXTextArea fx:id="TEXT_AREA" labelFloat="true"
                             promptText="List of elements (enter to separate the elements)" VBox.vgrow="ALWAYS">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="17.0"/>
                    </VBox.margin>
                </JFXTextArea>
                <BorderPane>
                    <bottom>
                        <JFXButton fx:id="DONE" prefHeight="25.0" prefWidth="55.0" text="Done"
                                   BorderPane.alignment="CENTER_LEFT">
                            <BorderPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </BorderPane.margin>
                        </JFXButton>
                    </bottom>
                </BorderPane>
            </children>
        </VBox>
    </children>
</JFXDialogLayout>
